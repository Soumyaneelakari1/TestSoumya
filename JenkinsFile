pipeline {
    agent any

    environment {
        MAVEN_HOME = 'C:\\apache-maven-3.9.11' // Update if Maven is in a different path
        PATH = "${env.MAVEN_HOME}\\bin;${env.PATH}"
    }

    stages {

        stage('Checkout') {
            steps {
                echo "Checking out source code..."
                checkout scm
            }
        }

        stage('Compile') {
            steps {
                echo "Compiling the Spring Boot application..."
                echo "${WORKSPACE}"
                bat """cd ${WORKSPACE}\\TestSoumya
                mvn clean compile"""
            }
        }

        stage('Run Unit Tests') {
            steps {
                echo "Running unit tests..."
                bat """cd ${WORKSPACE}\\TestSoumya
                                    mvn clean test"""
            }
        }

        stage('Jar File Creation') {
                    steps {
                        echo "Running unit tests..."
                        bat """cd ${WORKSPACE}\\TestSoumya
                                            mvn package"""
                    }
                }

        stage('Sonar Qube') {
                            steps {
                                echo "Running unit tests..."
                                bat """cd ${WORKSPACE}\\TestSoumya
                                                    mvn clean verify sonar:sonar "-Dsonar.host.url=http://localhost:9000" "-Dsonar.login=squ_c501a7160e073ab1388f714b3c5af0681f16eb4c""""
                            }
                        }



    }

    post {
        success {
            echo 'Build and test completed successfully.'
        }
        failure {
            echo 'Build or tests failed.'
        }
    }
}